<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
 <hibernate-mapping>
 	<class name="com.philip.fin.invest.Invest" table="raise_record" catalog="fin_philip">
 		<id name="id"  type="java.lang.Integer">
 			<column name="id" />
 			<generator class="increment" />
 		</id>
 		<property name="loan" type="java.lang.Integer">
 			<column name="loan" />
 		</property>
 		<property name="user" type="java.lang.Integer">
 			<column name="user" />
 		</property>
 		<property name="create_time" type="java.util.Date">
 			<column name="create_time" />
 		</property>
 		<property name="update_time" type="java.util.Date">
 			<column name="update_time" />
 		</property>
 		<property name="amount" type="java.math.BigDecimal">
 			<column name="amount" />
 		</property>
 	</class>
 </hibernate-mapping>